<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.dozen.commonbase.view.roundview.RoundLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minWidth="280dp"
        android:orientation="vertical"
        app:rv_backgroundColor="@color/white"
        app:rv_cornerRadius="15dp">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="5dp"
            android:text="使用条款与隐私政策"
            android:textColor="@color/color333333"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:overScrollMode="never">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvContext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="22dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="22dp"
                    android:lineSpacingExtra="3dp"
                    android:text="@string/head_agreement"
                    android:textColor="@color/color666666"
                    android:textSize="12.0sp" />

                <TextView
                    android:id="@+id/content_agreement"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="22dp"
                    android:layout_marginRight="22dp"
                    android:lineSpacingExtra="3dp"
                    android:text="@string/agreement"
                    android:textColor="@color/color666666"
                    android:textSize="12.0sp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="22dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="22dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvUserRule"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/agreement_end"
                        android:textColor="@color/color666666"
                        android:textSize="12sp" />

                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/tvOK"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="60dp"
                android:layout_marginEnd="60dp"
                android:background="@drawable/bg_btn_currency_45"
                android:gravity="center"
                android:lines="1"
                android:text="同意并继续"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold" />

            <com.dozen.commonbase.view.roundview.RoundTextView
                android:id="@+id/tvCancel"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="不同意"
                android:textColor="#FF444950"
                android:textSize="14sp"
                android:textStyle="bold"
                app:rv_backgroundColor="#00E2E2E2"
                app:rv_cornerRadius="15dp" />


        </LinearLayout>

    </com.dozen.commonbase.view.roundview.RoundLinearLayout>

</FrameLayout>