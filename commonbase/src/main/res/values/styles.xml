<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="title_view_style">
        <item name="android:layout_marginLeft">50dp</item>
        <item name="android:layout_marginRight">50dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/color333333</item>
        <item name="android:textSize">17sp</item>
    </style>

    <!-- 标题栏底部线条-->
    <style name="top_title_line">
        <item name="android:background">@color/grayE3</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1sp</item>
    </style>

    <!--加载框dialog样式 默认-->
    <style name="defaultDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- 下载进度dialog样式-->
    <style name="progressDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:padding">0dp</item>
    </style>

    <!--加载dialog样式-->
    <style name="BottomDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- Dialog进入及退出动画 -->
        <item name="android:windowAnimationStyle">@style/bottom_anim</item>
    </style>

    <!--加载dialogFragment样式-->
    <style name="BaseDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- Dialog进入及退出动画 -->
        <item name="android:windowAnimationStyle">@style/bottom_anim</item>
    </style>

    <!--底部弹出动画-->
    <style name="bottom_anim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/pop_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/pop_exit_anim</item>
    </style>

    <!--版本升级 按钮涟漪效果-->
    <style name="Button" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">#ff895b</item>
        <item name="colorButtonNormal">#ff895b</item>
    </style>

    <!-- web加载网页进度条-->
    <declare-styleable name="Themes">
        <attr name="numberProgressBarStyle" format="reference"/>
    </declare-styleable>

    <!--进度条-->
    <declare-styleable name="NumberProgressBar">
        <attr name="progress_current" format="integer"/>
        <attr name="progress_max" format="integer"/>

        <attr name="progress_unreached_color" format="color"/>
        <attr name="progress_reached_color" format="color"/>

        <attr name="progress_reached_bar_height" format="dimension"/>
        <attr name="progress_unreached_bar_height" format="dimension"/>

        <attr name="progress_text_size" format="dimension"/>
        <attr name="progress_text_color" format="color"/>

        <attr name="progress_text_offset" format="dimension"/>

        <attr name="progress_text_visibility" format="enum">
            <enum name="visible" value="0"/>
            <enum name="invisible" value="1"/>
        </attr>
    </declare-styleable>

    <!--数据为null-->
    <declare-styleable name="emptyView">
        <attr name="text_prompt" format="string" />
        <attr name="bg_image" format="integer" />
    </declare-styleable>

    <!-- 输入框样式-->
    <style name="editStyle">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@null</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:text">""</item>
        <item name="android:textColor">#666666</item>
        <item name="android:textColorHint">@color/descriptive_text</item>
        <item name="android:textSize">14dp</item>
    </style>

    <!--item通用布局-->
    <declare-styleable name="ItemView">
        <attr name="viewHeight" format="integer"/>
        <attr name="ivLeft" format="reference"/>
        <attr name="tvLeft" format="string"/>
        <attr name="tvRight" format="string"/>
        <attr name="isClick" format="boolean"/>
        <attr name="viewLine" format="boolean"/>
    </declare-styleable>

    <style name="WheelDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@null</item>
    </style>
</resources>
