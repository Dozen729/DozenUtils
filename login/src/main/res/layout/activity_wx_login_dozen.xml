<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:background="@color/top_bg_color"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".act.WXLoginActivity">

    <com.dozen.commonbase.view.TitleView
        android:id="@+id/titleView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleLine="false"
        app:topBackground="@color/top_bg_color" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/banner_img" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="恋爱避雷·网恋防骗·让绿茶现形"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <com.dozen.commonbase.view.roundview.RoundLinearLayout
        android:id="@+id/wx_login"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="50dp"
        android:gravity="center"
        app:rv_backgroundColor="#20FD93"
        app:rv_cornerRadius="8dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/icon_wechat_dozen"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:textColor="#0E0E0E"
            android:text="微信登录"/>

    </com.dozen.commonbase.view.roundview.RoundLinearLayout>

    <include
        layout="@layout/view_login_agree_dozen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/dimen_center"
        android:layout_marginTop="@dimen/dimen_small"
        android:layout_marginEnd="@dimen/dimen_center"
        android:gravity="center"
        android:orientation="horizontal" />

</LinearLayout>