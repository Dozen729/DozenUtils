<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.dozen.commonbase.view.roundview.RoundLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minWidth="280dp"
        android:orientation="vertical"
        app:rv_backgroundColor="#FFFFFFFF"
        app:rv_cornerRadius="12dp">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="33dp"
            android:text="当前活动仅剩"
            android:textColor="#FF302E51"
            android:textSize="16sp"
            android:textStyle="bold" />

        <com.dozen.login.view.CusFntTextView
            android:id="@+id/tv_show_reduce_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="10:00"
            android:textColor="#FFFF5405"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/tvContext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:gravity="center"
            android:lineSpacingExtra="4dp"
            android:text="一次开通永久使用，相当于不要钱，错过后悔一辈子"
            android:textColor="#FF302E51"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <com.dozen.commonbase.view.roundview.RoundTextView
                android:id="@+id/tv_close"
                android:layout_width="116dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="离开"
                android:textColor="#FF2F2C2C"
                android:textSize="16sp"
                app:rv_backgroundColor="#FFE2E2E2"
                app:rv_cornerRadius_BL="8dp" />

            <com.dozen.commonbase.view.roundview.RoundTextView
                android:id="@+id/tv_ok"
                android:layout_width="116dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="去开通"
                android:textColor="#FFFFFFFF"
                android:textSize="16sp"
                app:rv_backgroundColor="#FF56DE1A"
                app:rv_cornerRadius_BR="8dp" />

        </LinearLayout>

    </com.dozen.commonbase.view.roundview.RoundLinearLayout>

    <ImageView
        android:id="@+id/iv_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_gravity="end"
        android:background="@mipmap/back_dozen"/>

</FrameLayout>