<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.dozen.commonbase.view.roundview.RoundLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical"
            android:padding="10dp"
            app:rv_backgroundColor="#F8F6F6"
            app:rv_cornerRadius="15dp"
            app:rv_strokeColor="#234CD5"
            app:rv_strokeWidth="1dp">

            <com.dozen.commonbase.view.roundview.RoundLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:orientation="vertical"
                android:padding="5dp"
                app:rv_backgroundColor="#FFFFFF"
                app:rv_cornerRadius="8dp"
                app:rv_strokeColor="#E91E63"
                app:rv_strokeWidth="1dp">

                <com.dozen.commonbase.view.spinner.NiceSpinner
                    android:id="@+id/nice_spinner1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </com.dozen.commonbase.view.roundview.RoundLinearLayout>


        <com.dozen.commonbase.view.roundview.RoundLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:orientation="vertical"
            android:padding="5dp"
            android:gravity="center"
            app:rv_backgroundColor="#FFFFFF"
            app:rv_cornerRadius="8dp"
            app:rv_strokeColor="#E91E63"
            app:rv_strokeWidth="1dp">

            <com.dozen.commonbase.view.spinner.NiceSpinner
                android:id="@+id/nice_spinner2"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                app:backgroundSelector="@drawable/spinner_background_main"
                app:arrowTint="#0027FF" />

            <com.dozen.commonbase.view.spinner.NiceSpinner
                android:id="@+id/nice_spinner3"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:gravity="center"
                app:popupTextAlignment="center"
                android:textAlignment="center"
                app:backgroundSelector="@drawable/spinner_background_main"
                app:dropDownBackground="@drawable/spinner_background_main"
                app:arrowTint="#0027FF" />

            <com.dozen.commonbase.view.spinner.NiceSpinner
                android:id="@+id/nice_spinner4"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                app:backgroundSelector="@drawable/spinner_background_main"
                app:dropDownBackground="@mipmap/girl_guide"
                app:itemBackgroundChange="@drawable/spinner_background_main"
                app:textTint="#ffffff"
                app:popupTextAlignment="start"
                app:arrowTint="#0027FF" />

        </com.dozen.commonbase.view.roundview.RoundLinearLayout>

        </com.dozen.commonbase.view.roundview.RoundLinearLayout>

    </ScrollView>

</LinearLayout>