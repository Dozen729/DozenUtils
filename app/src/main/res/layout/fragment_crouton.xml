<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/alternate_view_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.dozen.commonbase.view.roundview.RoundLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical"
            android:padding="10dp"
            app:rv_backgroundColor="#F8F6F6"
            app:rv_cornerRadius="15dp"
            app:rv_strokeColor="#234CD5"
            app:rv_strokeWidth="1dp">

            <com.dozen.commonbase.view.roundview.RoundLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:orientation="vertical"
                android:padding="5dp"
                app:rv_backgroundColor="#FFFFFF"
                app:rv_cornerRadius="8dp"
                app:rv_strokeColor="#E91E63"
                app:rv_strokeWidth="1dp">

                <Button
                    android:id="@+id/btn_crouton1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="顶部弹窗" />

                <Button
                    android:id="@+id/btn_crouton2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="自定义弹窗" />

                <Button
                    android:id="@+id/btn_crouton3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="自带弹窗info" />

                <Button
                    android:id="@+id/btn_crouton4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="自带弹窗ALERT" />

                <Button
                    android:id="@+id/btn_crouton5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="自带弹窗CONFIRM" />

                <Button
                    android:id="@+id/btn_crouton6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="自带弹窗null" />

                <Button
                    android:id="@+id/btn_crouton7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="直接弹窗" />

                <Button
                    android:id="@+id/btn_crouton8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="属性弹窗" />

            </com.dozen.commonbase.view.roundview.RoundLinearLayout>


        </com.dozen.commonbase.view.roundview.RoundLinearLayout>

    </ScrollView>

</LinearLayout>