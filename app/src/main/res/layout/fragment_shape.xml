<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.dozen.commonbase.view.roundview.RoundLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical"
            android:padding="10dp"
            app:rv_backgroundColor="#F8F6F6"
            app:rv_cornerRadius="15dp"
            app:rv_strokeColor="#234CD5"
            app:rv_strokeWidth="1dp">

            <com.dozen.commonbase.view.roundview.RoundLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:orientation="vertical"
                android:padding="5dp"
                app:rv_backgroundColor="#FFFFFF"
                app:rv_cornerRadius="8dp"
                app:rv_strokeColor="#E91E63"
                app:rv_strokeWidth="1dp">

                <com.dozen.commonbase.view.shapeofview.shapes.RoundRectView
                    android:id="@+id/roundRect"
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="8dp"
                    android:elevation="6dp"
                    app:shape_roundRect_borderColor="@android:color/black"
                    app:shape_roundRect_borderWidth="2dp"
                    app:shape_roundRect_bottomLeftRadius="10dp"
                    app:shape_roundRect_bottomRightRadius="10dp"
                    app:shape_roundRect_topLeftRadius="10dp"
                    app:shape_roundRect_topRightRadius="10dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/girl_guide" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:paddingTop="25dp"
                        android:shadowColor="@android:color/black"
                        android:shadowDx="2"
                        android:shadowRadius="10"
                        android:text="RoundRect"
                        android:textColor="@android:color/white"
                        android:textSize="11sp"
                        android:textStyle="bold" />

                </com.dozen.commonbase.view.shapeofview.shapes.RoundRectView>

                <com.dozen.commonbase.view.shapeofview.shapes.TriangleView
                    android:id="@+id/triangle"
                    android:layout_width="30dp"
                    android:layout_height="13dp"
                    android:elevation="6dp">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/colorPrimary" />
                </com.dozen.commonbase.view.shapeofview.shapes.TriangleView>

            </com.dozen.commonbase.view.roundview.RoundLinearLayout>

            <com.dozen.commonbase.view.roundview.RoundLinearLayout
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:orientation="horizontal"
                android:padding="5dp"
                app:rv_backgroundColor="#FFFFFF"
                app:rv_cornerRadius="8dp"
                app:rv_strokeColor="#E91E63"
                app:rv_strokeWidth="1dp">

                <com.dozen.commonbase.view.shapeofview.shapes.DottedEdgesCutCornerView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:shape_dot_radius="3dp"
                    app:shape_dot_spacing="2dp"
                    app:shape_dottedEdgesCutCorner_bottomLeftSize="8dp"
                    app:shape_dottedEdgesCutCorner_bottomRightSize="8dp"
                    app:shape_edge_position="right">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@mipmap/girl_guide">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="32dp"
                            android:layout_alignParentBottom="true"
                            android:background="@color/colorPrimary" />
                    </RelativeLayout>
                </com.dozen.commonbase.view.shapeofview.shapes.DottedEdgesCutCornerView>

                <com.dozen.commonbase.view.shapeofview.shapes.DottedEdgesCutCornerView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:shape_dot_radius="3dp"
                    app:shape_dot_spacing="2dp"
                    app:shape_dottedEdgesCutCorner_bottomLeftSize="8dp"
                    app:shape_dottedEdgesCutCorner_bottomRightSize="8dp"
                    app:shape_edge_position="left">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@mipmap/girl_guide">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="32dp"
                            android:layout_alignParentBottom="true"
                            android:background="@color/colorAccent" />
                    </RelativeLayout>
                </com.dozen.commonbase.view.shapeofview.shapes.DottedEdgesCutCornerView>

            </com.dozen.commonbase.view.roundview.RoundLinearLayout>

            <com.dozen.commonbase.view.roundview.RoundLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:orientation="horizontal"
                android:padding="5dp"
                app:rv_backgroundColor="#FFFFFF"
                app:rv_cornerRadius="8dp"
                app:rv_strokeColor="#E91E63"
                app:rv_strokeWidth="1dp">

                <com.dozen.commonbase.view.shapeofview.shapes.CutCornerView
                    android:id="@+id/layoutBottomBar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="5dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#FFFFFF">

                        <com.dozen.commonbase.view.shapeofview.shapes.DottedEdgesCutCornerView
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            app:shape_dot_radius="3dp"
                            app:shape_dot_spacing="2dp"
                            app:shape_dottedEdgesCutCorner_bottomRightSize="8dp"
                            app:shape_dottedEdgesCutCorner_topRightSize="8dp"
                            app:shape_edge_position="left">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/colorPrimaryDark">

                            </RelativeLayout>
                        </com.dozen.commonbase.view.shapeofview.shapes.DottedEdgesCutCornerView>
                    </RelativeLayout>
                </com.dozen.commonbase.view.shapeofview.shapes.CutCornerView>

            </com.dozen.commonbase.view.roundview.RoundLinearLayout>

            <com.dozen.commonbase.view.roundview.RoundLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:orientation="vertical"
                android:padding="5dp"
                app:rv_backgroundColor="#FFFFFF"
                app:rv_cornerRadius="8dp"
                app:rv_strokeColor="#E91E63"
                app:rv_strokeWidth="1dp">

                <com.dozen.commonbase.view.shapeofview.shapes.CutCornerView
                    android:id="@+id/shapes"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="16dp"
                    android:elevation="4dp"
                    app:shape_cutCorner_bottomLeftSize="16dp"
                    app:shape_cutCorner_bottomRightSize="16dp"
                    app:shape_cutCorner_topLeftSize="16dp"
                    app:shape_cutCorner_topRightSize="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/colorPrimary"
                        android:gravity="center"
                        android:text="Shapes"
                        android:textColor="@android:color/white" />

                </com.dozen.commonbase.view.shapeofview.shapes.CutCornerView>

                <com.dozen.commonbase.view.shapeofview.shapes.CutCornerView
                    android:id="@+id/topSheet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:shape_cutCorner_topLeftSize="12dp">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#C13C3C"
                        android:paddingLeft="22dp"
                        android:paddingTop="12dp"
                        android:paddingRight="22dp"
                        android:paddingBottom="12dp">

                        <ImageView
                            android:id="@+id/imageView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@mipmap/girl_guide" />

                    </FrameLayout>

                </com.dozen.commonbase.view.shapeofview.shapes.CutCornerView>

                <com.dozen.commonbase.view.shapeofview.shapes.ArcView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginBottom="8dp"
                    android:elevation="4dp"
                    app:shape_arc_height="30dp"
                    app:shape_arc_position="bottom">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_launcher_background" />

                </com.dozen.commonbase.view.shapeofview.shapes.ArcView>

                <com.dozen.commonbase.view.shapeofview.shapes.CircleView
                    android:id="@+id/circle"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="-90dp"
                    android:layout_marginBottom="8dp"
                    android:elevation="4dp"
                    app:shape_circle_borderColor="@android:color/black"
                    app:shape_circle_borderWidth="2dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/girl_guide" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:paddingTop="25dp"
                        android:shadowColor="@android:color/black"
                        android:shadowDx="2"
                        android:shadowRadius="10"
                        android:text="Circle"
                        android:textColor="@android:color/white"
                        android:textSize="11sp"
                        android:textStyle="bold" />

                </com.dozen.commonbase.view.shapeofview.shapes.CircleView>

                <com.dozen.commonbase.view.shapeofview.shapes.StarView
                    android:layout_width="240dp"
                    android:layout_height="240dp"
                    android:layout_gravity="center"
                    android:elevation="4dp"
                    app:shape_star_noOfPoints="5">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/girl_guide" />

                </com.dozen.commonbase.view.shapeofview.shapes.StarView>

                <com.dozen.commonbase.view.shapeofview.shapes.BubbleView
                    android:id="@+id/heart"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginBottom="8dp"
                    android:elevation="6dp"
                    app:arrow_posititon_percent="0.75"

                    app:shape_bubble_arrowHeight="10dp"
                    app:shape_bubble_arrowPosition="bottom"
                    app:shape_bubble_arrowWidth="10dp"
                    app:shape_bubble_borderRadius="20dp">


                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_launcher_background" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:shadowColor="@android:color/black"
                        android:shadowDx="2"
                        android:shadowRadius="10"
                        android:text="Bubble"
                        android:textColor="@android:color/white"
                        android:textSize="11sp"
                        android:textStyle="bold" />

                </com.dozen.commonbase.view.shapeofview.shapes.BubbleView>

                <com.dozen.commonbase.view.shapeofview.shapes.DiagonalView
                    android:id="@+id/diagonal"
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:layout_marginBottom="8dp"
                    android:elevation="4dp"

                    app:shape_diagonal_angle="10"
                    app:shape_diagonal_position="bottom">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/girl_guide" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:paddingTop="25dp"
                        android:text="Diagonal"
                        android:textColor="@android:color/white"
                        android:textStyle="bold" />

                </com.dozen.commonbase.view.shapeofview.shapes.DiagonalView>

                <com.dozen.commonbase.view.shapeofview.shapes.PolygonView
                    android:id="@+id/polygonView"
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:layout_marginBottom="8dp"
                    android:elevation="4dp"
                    app:shape_polygon_noOfSides="6">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/girl_guide" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:paddingTop="25dp"
                        android:shadowColor="@android:color/black"
                        android:shadowDx="2"
                        android:shadowRadius="10"
                        android:text="Polygon View"
                        android:textColor="@android:color/white"
                        android:textSize="11sp"
                        android:textStyle="bold" />

                </com.dozen.commonbase.view.shapeofview.shapes.PolygonView>

            </com.dozen.commonbase.view.roundview.RoundLinearLayout>


        </com.dozen.commonbase.view.roundview.RoundLinearLayout>

    </ScrollView>

</LinearLayout>