<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.dozen.commonbase.view.roundview.RoundLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical"
            android:padding="10dp"
            app:rv_backgroundColor="#F8F6F6"
            app:rv_cornerRadius="15dp"
            app:rv_strokeColor="#234CD5"
            app:rv_strokeWidth="1dp">

            <com.dozen.commonbase.view.roundview.RoundLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:orientation="vertical"
                android:padding="5dp"
                app:rv_backgroundColor="#FFFFFF"
                app:rv_cornerRadius="8dp"
                app:rv_strokeColor="#E91E63"
                app:rv_strokeWidth="1dp">

                <Button
                    android:id="@+id/svg_btn1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:text="@string/app_name"/>

                <com.dozen.commonbase.view.zoomage.ZoomImageView
                    android:id="@+id/svg_view1"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"/>

                <ImageView
                    android:id="@+id/svg_view7"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"/>

                <ImageView
                    android:id="@+id/svg_view2"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"/>

                <ImageView
                    android:id="@+id/svg_view3"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"/>

                <ImageView
                    android:id="@+id/svg_view4"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"/>

                <ImageView
                    android:id="@+id/svg_view5"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"/>

                <ImageView
                    android:id="@+id/svg_view6"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"/>

            </com.dozen.commonbase.view.roundview.RoundLinearLayout>


        </com.dozen.commonbase.view.roundview.RoundLinearLayout>

    </ScrollView>

</LinearLayout>